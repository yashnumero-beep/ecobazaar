<div id="appView" class="hidden">
    <!-- Header -->
    <header class="header">
        <div class="header-top">
            <i class="fas fa-leaf"></i> EcoBazaar - Shop Green, Save the Planet
        </div>
        <div class="header-main">
            <div class="logo">
                <i class="fas fa-leaf"></i> EcoBazaar
            </div>
            <div class="user-info">
                <span id="userName" style="font-weight: 600;"></span>
                <button onclick="logout()" class="btn btn-outline" style="padding: 8px 16px;">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container">
        <!-- SELLER DASHBOARD -->
        <section id="sellerSection" class="hidden">
            <h1 style="margin-bottom: 30px;"><i class="fas fa-store"></i> Seller Dashboard</h1>

            <!-- Stats -->
            <div class="stats-grid" id="sellerStats"></div>

